<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_compact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="@mipmap/ic_rasch"
    tools:showIn="@layout/activity_compact"
    android:background= "@drawable/abc_cab_background_internal_bg"
    tools:layout_height="wrap_content"
    android:elevation="0dp">

    <Button
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button8"
        android:background="@drawable/ic_menu_manage"
        android:layout_width="35dp"
        android:onClick="newScreen5"
        tools:onClick="newScreen5" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/progressBar2"
        android:indeterminate="false"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/button9"
        android:background="@mipmap/ic_nuch"
        style="@style/Widget.AppCompat.Button"
        android:textColor="@color/abc_input_method_navigation_guard"
        app:backgroundTint="@mipmap/ic_nuch"
        android:onClick="onMyClick"
        tools:onClick="onMyClick"
        android:clickable="false"
        android:layout_alignWithParentIfMissing="true"
        android:cursorVisible="false"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_marginTop="51dp"
        android:id="@+id/button10"
        android:background="@mipmap/ic_pause" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/button10"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9"
        android:id="@+id/button11"
        android:background="@mipmap/ic_stop" />

</RelativeLayout>
